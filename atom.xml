    <id>http://blog.282994.xyz/2025/06/16/LaTeX%E7%BC%96%E5%86%99%E5%9F%BA%E7%A1%80%E7%9F%A5%E8%AF%86/</id>
    <published>2025-06-16T13:17:24.280Z</published>
